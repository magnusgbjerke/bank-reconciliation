{
  "name": "bank-reconciliation-app",
  "version": "1.0.0",
  "description": "A polished bank reconciliation application with PostgreSQL backend",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install:all": "npm install && cd client && npm install",
    "fix-deps": "node fix-dependencies.js",
    "setup": "node setup.js",
    "setup-db": "node scripts/setup-database.js",
    "populate-mock": "node server/scripts/populateMockData.js",
    "stop-node": "taskkill /f /im node.exe"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "csv-parser": "^3.0.0",
    "xlsx": "^0.18.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "bank",
    "reconciliation",
    "postgresql",
    "react",
    "express"
  ],
  "author": "Bank Reconciliation Team",
  "license": "MIT"
}
